<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.sheng.lib.EasySeekBar
            android:id="@+id/id_seekbar_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp" />

        <com.sheng.lib.EasySeekBar
            android:id="@+id/id_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:ssb_bubbleRadius="20dp"
            app:ssb_isAlwayShowBubble="true"
            app:ssb_isCanTouch="true"
            app:ssb_isSeekBarRound="true"
            app:ssb_isShowText="true"
            app:ssb_normalRadius="15dp"
            app:ssb_seekbarHeight="10dp"
            app:ssb_seekbarImg="@drawable/ic_seekbar"
            app:ssb_seekbarType="progress"
            app:ssb_selectRadius="20dp"
            app:ssb_thumbImg="@drawable/ic_thumb" />

        <com.sheng.lib.EasySeekBar
            android:id="@+id/id_seekbar_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:ssb_bubbleRadius="20dp"
            app:ssb_isAlwayShowBubble="true"
            app:ssb_isCanTouch="true"
            app:ssb_isSeekBarRound="true"
            app:ssb_isShowBubble="true"
            app:ssb_isShowText="true"
            app:ssb_normalRadius="15dp"
            app:ssb_seekbarBubbleColor="#00ACC1"
            app:ssb_seekbarFirstColor="#80DEEA"
            app:ssb_seekbarHeight="10dp"
            app:ssb_seekbarSecondColor="#00ACC1"
            app:ssb_seekbarTextColor="#00ACC1"
            app:ssb_seekbarType="progress"
            app:ssb_selectRadius="15dp"
            app:ssb_thumbColor="#00ACC1" />

        <com.sheng.lib.EasySeekBar
            android:id="@+id/id_seekbar_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:ssb_bubbleRadius="20dp"
            app:ssb_isAlwayShowBubble="true"
            app:ssb_isCanTouch="true"
            app:ssb_isSeekBarRound="true"
            app:ssb_isShowBubble="true"
            app:ssb_normalRadius="15dp"
            app:ssb_isShowFloat="true"
            app:ssb_seekbarBubbleColor="#00ACC1"
            app:ssb_seekbarFirstColor="#80DEEA"
            app:ssb_seekbarHeight="10dp"
            app:ssb_seekbarSecondColor="#00ACC1"
            app:ssb_seekbarTextColor="#00ACC1"
            app:ssb_seekbarType="progress"
            app:ssb_selectRadius="15dp"
            app:ssb_bubbleType="roundRect"
            app:ssb_thumbColor="#00ACC1" />

        <com.sheng.lib.EasySeekBar
            android:id="@+id/id_seekbar_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:ssb_isShowText="true"
            app:ssb_normalRadius="15dp"
            app:ssb_seekbarFirstColor="#80DEEA"
            app:ssb_seekbarHeight="10dp"
            app:ssb_seekbarTextColor="#80DEEA"
            app:ssb_seekbarTextSelectColor="#00ACC1"
            app:ssb_seekbarType="diy"
            app:ssb_selectRadius="15dp"
            app:ssb_thumbColor="#80DEEA"
            app:ssb_thumbSelectColor="#00ACC1" />

        <com.sheng.lib.EasySeekBar
            android:id="@+id/id_seekbar_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:ssb_isShowText="true"
            app:ssb_normalRadius="15dp"
            app:ssb_seekbarTextSize="12sp"
            app:ssb_seekbarFirstColor="#80DEEA"
            app:ssb_seekbarHeight="10dp"
            app:ssb_seekbarTextColor="#80DEEA"
            app:ssb_seekbarTextSelectColor="#00ACC1"
            app:ssb_seekbarType="diy"
            app:ssb_selectRadius="15dp"
            app:ssb_thumbColor="#80DEEA"
            app:ssb_thumbSelectColor="#00ACC1" />

    </LinearLayout>

</ScrollView>